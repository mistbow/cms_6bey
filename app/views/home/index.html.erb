<div class="deals">
	<%Deal.all.each_with_index do |deal,index|%>
	<div class="deal" id="deal_<%=index%>">
			<ul class="pic">
				<li>
					<%=link_to image_tag(deal.image_path),deal_path(deal),target:"_blank"%>
