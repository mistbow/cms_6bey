<script type="text/javascript">
var margin_left = 10;
var margin_top = 10;
var deals=$(".deal");
var deal_W = deals[0].offsetWidth+margin_left;
function locate_deals(){
    var h=[];
    for(var i = 0;i < deals.length;i++) {
        deal_h = deals[i].offsetHeight;
        h[i]=deal_h;
        $('#deal_'+i).css("left",(i%4) * deal_W);
        if(i < 4) {
            $('#deal_'+i).css("top",0);
        }else{
        	$('#deal_'+i).css("top",h[i-4]+margin_top);
        }
    }
}
window.onload = function() {locate_deals();};
window.onresize = function() {locate_deals();};
</script>

