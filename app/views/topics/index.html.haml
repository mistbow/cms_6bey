.topics 
  %h3  CMS6BEY论坛
  = link_to '发表新话题', new_topic_path, class:'btn btn-success', id:'new_topic'
  %table

    %tr
      %th{width:'8%'}  类别
      %th{width:'8%'} 阅读量
      %th.title 标题
      %th{width:'8%'} 作者
      %th{width:'12%'} 创建
      %th{width:70} 最后回复

    - @topics.each do |topic|
      %tr
        %td= topic.node.name
        %td= topic.read_count.to_i
        %td= link_to truncate(topic.title, :length => 50, :omission => '...'), topic_path(topic)
        %td= link_to topic.user.name, user_path(topic.user) 
        %td= format_time topic.created_at
        %td= topic.replies.last.nil??  '暂无回复': (link_to topic.replies.last.user.name, user_path(topic.replies.last.user))
  %br


