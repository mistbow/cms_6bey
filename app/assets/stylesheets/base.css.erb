
.class-container {
  padding-bottom: 20px;
  text-align: center;
  padding-left: 20px;
}

.deals{
	position: relative;
}


.deals img{
 width: 225px;
 display: block;
}
.deal{
	position: absolute;
}


ul{
	list-style:none;
}

.description{
	background-color: #fff;
	width: 215px;
	margin-left: 25px;
	height: 70px;
	margin-top: -10px;
	padding-top: 10px;
	padding-left:5px;
	padding-right: 5px;
}

.description a:hover {
	color: #FF9933;
	text-decoration: none;
	background-color: #fff;
}

.description a {
	color: #888;
}

.pagination{
	padding-left: 30%;
}

.pagination a:hover{
  border: 1px;
  padding: 8px 8px 8px 8px;
	color: white;
	margin-right: 4px;
	text-decoration: none;
	line-height: 33px;
	border-radius: 3px;
  background-color: #1AA319;
}

.pagination a{
  color: #666;
  padding: 8px 8px 8px 8px;
	margin-right: 4px;
	text-decoration: none;
	line-height: 33px;
	border-radius: 3px;
}

.pagination .current{
  border: 1px;
  padding: 8px 8px 8px 8px;
	color: white;
	margin-right: 4px;
	text-decoration: none;
	line-height: 33px;
	border-radius: 3px;
  background-color: #1AA319;
}

footer{
	padding-top: 35px;
	padding-left:30%;
}

.show_box{
	width: 960px;
	margin: 0px auto;
	overflow: hidden;
	border-radius: 5px;
	background:url(<%= asset_path 'bg.png' %>);
}

.deal_category{
	width: 930px;
	overflow: hidden;
	border-radius: 2px;
	padding-left: 15px;
	background:url(<%= asset_path 'bg.png' %>);	
	text-align: left;
}

.show_box a:hover{
	border: 1px;
	margin-right: 4px;
	text-decoration: none;
	line-height: 33px;
	border-radius: 3px;
  color: #1AA319;
  background-color: #fff;

}

.show_pic{
	float: left;
	padding: 15px;
	width: 400px;
}

.show_box img{
	width: 400px;
}

.show_info{
	float: left;
	padding: 20px;
	width: 400px;
}

.show_box .price{
	font-size: 20px;
	color: #AC0D05;
	line-height: 40px;
	padding-top: 10px;
	height: 50px;
	font-weight: bold;
	font-family: "微软雅黑";
}

.buyit{
	width: 116px;
	height: 43px;
  background: url(<%=asset_path 'buy_it.gif'%>) top center;
}

.buyit:hover{
  background: url(<%=asset_path 'buy_it.gif'%>) bottom center;
  cursor: pointer;
}

.share{
	float: right;
	width: 120px;
	padding-top: 10px;
}

.share a{
	float: left;
	font-size: 22px;
	text-decoration: none;
	line-height: 24px!important;
}

.jtico_tsina{
	background: url(<%=asset_path 'share.png'%>);
}

.info_bar{
	height: 80px;
	line-height: 80px;
	font-size: 30px;
	color: #999;
	text-align: center;
}

.deal_tags{
	float: left;
	width: 220px;
	margin-left: 12px;
	padding-bottom: 15px;
}

.deal_tags h3{
	clear: both;
	font-size: 16px;
	color: #888;
	padding-bottom: 10px;
	height: 25px;
}


.deal_tags a {
	float: left;
	font-size: 12px;
	padding: 5px;
	width: 60px;
	text-decoration: none;
	color: #888;
}


.deal_tags a:hover {
  background-color: #fff;
  color: #F60;
}

.img_preview{
	width: 20px;
	height: 20px;
}


.buyshare {
	float: right;
	margin-top: -30px;
}